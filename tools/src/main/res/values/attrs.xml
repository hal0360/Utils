<resources>

    <declare-styleable name="CustomInput">
        <attr name="inputIcon" format="integer" />
        <attr name="placeholder" format="string" />
        <attr name="inputText" format="string" />
        <attr name="inputType" format="enum">
            <enum name="password" value="1"/>
            <enum name="number" value="2"/>
            <enum name="plain" value="3"/>
            <enum name="disabled" value="4"/>
        </attr>
    </declare-styleable>

</resources>
